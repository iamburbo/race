{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "es2018", "dom",
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "build"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
